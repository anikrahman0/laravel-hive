{
    "name": "anikrahman/laravel-hive",
    "description": "Multi-tenant SaaS helper for Laravel 12 with subdomain and tenant context",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Md. Anik Rahman",
            "email": "a7604366@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "AnikRahman\\Hive\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AnikRahman\\Hive\\Providers\\HiveServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^4.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "orchestra/testbench": "^10.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest"
    }
}
